{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4, { "MemberExpression": "off", "SwitchCase": 1 }],
        "camelcase": ["off"],
        "linebreak-style": ["off"],
        "no-trailing-spaces": ["error", { "skipBlankLines": true }],
        "eol-last": ["error", "always"]
    }
}
